<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inved.go4lunch">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_appli"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_appli_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RESTAURANT ACTIVITY -->
        <activity android:name=".controller.RestaurantActivity"
            android:label="@string/toolbar_title_restaurant_activity"
            android:parentActivityName=".controller.MainActivity"/>

        <!-- PROFILE ACTIVITY -->
        <activity android:name=".auth.ProfileActivity"
            android:label="@string/toolbar_title_login_activity"
            android:parentActivityName=".controller.RestaurantActivity"/>

        <!-- NOTIFICATION SERVICE -->
        <service
            android:name=".notification.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>